{% extends 'base.html.twig' %}

{% block title %}Hello PostController!{% endblock %}

{% block body %}
{# {{ dump(post) }} #}
<h2>List All Post</h2>
<table class="table table-striped">
    <thead>
        <th>ID</th>
        <th>Title</th>
    </thead>
    <tbody>
        <tr>
            <td>{{ post.id|e }}</td>
            <td>{{ post.title|e }}</td>
            <td>{{ post.category|e }}</td>
            
             <td><img src="{{ asset('uploads/' ~ post.image) }}"/></td>
        </tr>

    </tbody>
</table>
{% endblock %}
