{% extends 'base.html.twig' %}

{% block title %}Hello PostController!{% endblock %}

{% block body %}
{# {{ dump(posts) }} #}
{% for message in app.flashes('success') %}
            <div class="alert alert-success">
                {{ message }}
            </div>
{% endfor %}
<h2>List All Post</h2>
<table class="table table-striped">
    <thead>
        <th>ID</th>
        <th>Title</th>
    </thead>
    <tbody>

    {% for post in posts %}
        <tr>
            <td>{{ post.id|e }}</td>
            <td><a href="{{ path( 'post.show', { id:post.id }) }}">{{ post.title|e }}</a></td>
            <td>{{ post.category|e }}</td>
            <td><a href="{{ path( 'post.delete', { id:post.id }) }}" class="btn btn-sm btn-danger">Delete</a></td>
        </tr>
    {% endfor %}

    </tbody>
</table>
{% endblock %}
